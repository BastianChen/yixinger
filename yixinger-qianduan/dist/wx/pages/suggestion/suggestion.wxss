page {
  background-color: #fff;
}

input {
  margin: 0 auto;
  width: 90%;
  height: 60rpx;
  border-radius: 40rpx;
  background: #fff;
  text-align: left;
  padding-left: 20px;
  font-size: 30rpx;
}

.section {
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 70rpx;
  background-color: #00bfff;
}

.icon {
  position: absolute;
  top: 20rpx;
  left: 28rpx;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png') center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.empty {
  width: 100%;
  height: 40px;
  background-color: #fff;
}

.searchData {
  border-bottom: 1px solid #e8e8e8;
  padding: 10px;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 18px;
}

.searchData:active {
  background-color: #e8e8e8;
}

button {
  border: 0px;
  text-align: left;
}

.firstRow {
  margin-left: 3px;
}

.secondRow {
  margin-left: 3px;
  font-size: 16px;
  color: #8b8386;
}

.navigation {
  width: 20px;
  height: 20px;
}

.imgDiv {
  margin-left: 3px;
  margin: 10px auto;
  text-align: center;
}

.clear {
  position: absolute;
  z-index: 9999;
  top: 8rpx;
  right: 38rpx;
}

.clearImg {
  width: 50rpx;
  height: 50rpx;
}
