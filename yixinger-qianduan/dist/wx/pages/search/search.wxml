<view class="map_container">
  <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" show-location="true" markers="{{markers}}" bindmarkertap="makertap"></map>
</view>
  <cover-view class="place_info" wx:if="{{placeData.title!=null}}">
    <cover-view class="h1">{{placeData.title}}</cover-view>
    <cover-view class="h2">{{placeData.address}}</cover-view>
    <cover-image class="img" src="https://wzcb97.top/images/index/navigation.png" bindtouchstart="navigation"/>
  </cover-view>