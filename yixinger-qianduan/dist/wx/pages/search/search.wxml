<view class="section">
  <input placeholder="输入关键字"  type="text" bindtouchstart="bindKeyInput"/>
</view>
<view class="map_container">
  <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" show-location="true" markers="{{markers}}" bindmarkertap="makertap"></map>
</view>
<view class="place_info">
  <text class="h1">{{placeData.title}}</text>
  <text>{{placeData.address}}</text>
  <van-button type="primary" size="normal" round class="_van-button data-v-548e5345" bindtouchstart="nav">导航</van-button>
</view>